---
type IconProps = {
	fill?: string;
};

const { fill = "#9A4968" }: IconProps = Astro.props;
// Function to add the script dynamically
const addScript = () => {
	if (typeof document !== "undefined") {
		const script = document.createElement("script");
		script.src = "/assets/key-redirect.js";
		script.type = "module";
		script.defer = true;
		document.head.appendChild(script);

		return () => {
			document.head.removeChild(script);
		};
	}
};

addScript();
---

<div class="hidden md: block mb-auto h-[10%]"></div>
<!-- Espaciador para empujar el contenido hacia abajo -->
<div class="flex flex-col justify-between items-center h-[10%]">
	<a href="/haiku-reels-astro/galeria/" class="w-[15%]">
		<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="w-[100%]">
			<path
				d="M201.4 374.6c12.5 12.5 32.8 12.5 45.3 0l160-160c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L224 306.7 86.6 169.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l160 160z"
				fill={fill}></path>
		</svg>
	</a>
</div>
