<svg
	xmlns="http://www.w3.org/2000/svg"
	viewBox="0 0 512 512"
	style="width: 2rem; height: 2rem;"
	class="fill-current text-atomic_tangerine dark:text-rose_gold hover: cursor-pointer"
	data-theme-toggle
>
	<!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
	<path
		d="M448 256c0-106-86-192-192-192l0 384c106 0 192-86 192-192zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256z"
	></path>
</svg>

<script>
	const colorParaElDecoradorEnElTemaOscuro = "#FBE2D0";
	const colorParaElDecoradorEnElTemaClaro = "#41436A";

	const cambiarElTemaDelDecorador = (): void => {
		const usandoTemaOscuro = localStorage.getItem("theme") === "dark";
		document
			.querySelector("meta[name=theme-color]")
			?.setAttribute(
				"content",
				usandoTemaOscuro ? colorParaElDecoradorEnElTemaClaro : colorParaElDecoradorEnElTemaOscuro
			);
	};

	const cambiarElTemaDelSitio = (): void => {
		const usandoTemaOscuro = localStorage.getItem("theme") === "dark";
		if (usandoTemaOscuro) {
			document.documentElement.classList.remove("dark");
		} else {
			document.documentElement.classList.add("dark");
		}
	};

	const cambiarElTemaAlmacenadoEnLaMemoriaLocal = (): void => {
		const usandoTemaOscuro = localStorage.getItem("theme") === "dark";
		localStorage.setItem("theme", usandoTemaOscuro ? "light" : "dark");
	};

	const botonesParaElCambioDeTema = document.querySelectorAll("[data-theme-toggle]");
	botonesParaElCambioDeTema.forEach((boton) => {
		boton.addEventListener("click", () => {
			cambiarElTemaDelDecorador();
			cambiarElTemaDelSitio();
			cambiarElTemaAlmacenadoEnLaMemoriaLocal();
		});
	});
</script>
