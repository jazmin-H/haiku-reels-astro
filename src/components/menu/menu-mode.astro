<svg
	xmlns="http://www.w3.org/2000/svg"
	viewBox="0 0 512 512"
	style="width: 2rem; height: 2rem;"
	class="fill-current text-atomic_tangerine dark:text-rose_gold hover: cursor-pointer"
	data-theme-toggle
>
	<!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
	<path
		d="M448 256c0-106-86-192-192-192l0 384c106 0 192-86 192-192zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256z"
	></path>
</svg>

<script>
	// Encuentra nuestro SVG en la página
	const botonesParaElCambioDeTema = document.querySelectorAll("[data-theme-toggle]");
	botonesParaElCambioDeTema.forEach((boton) => {
		boton.addEventListener("click", () => {
			// Encuentra el elemento HTML
			const htmlElement = document.documentElement;
			// Cambia entre las clases 'dark' y 'light'
			if (htmlElement.classList.contains("dark")) {
				htmlElement.classList.remove("dark");
				localStorage.setItem("theme", "light");
			} else {
				htmlElement.classList.add("dark");
				localStorage.setItem("theme", "dark");
			}
		});
	});

	// Cargar el tema almacenado en el localStorage al cargar la página
	const ultimoTemaGuardado = localStorage.getItem("theme");
	if (ultimoTemaGuardado) {
		document.documentElement.classList.add(ultimoTemaGuardado);
	}
</script>
