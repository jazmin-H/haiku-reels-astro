{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@layouts/*": ["src/layouts/*"],
			"@config/*": ["src/config/*"],
			"@content/*": ["src/content/*"],
			"@backgrounds/*": ["src/backgrounds/*"],
			"@components/*": ["src/components/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": ["src/**/*", "generate-haikus-json.ts"]
}
